<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pin_expandableList_person"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Icon"/>

    <TextView
        android:id="@+id/textview1_expandableList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text=""
        android:layout_toEndOf="@+id/pin_expandableList_person"
        android:layout_toRightOf="@+id/pin_expandableList_person"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/textview2_expandableList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview1_expandableList"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/pin_expandableList_person"
        android:layout_toRightOf="@+id/pin_expandableList_person"
        android:text=""
        android:layout_marginStart="5dp" />


    <View
        android:id="@+id/divider_person_expandableListView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/pin_expandableList_person"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider" />


</RelativeLayout>